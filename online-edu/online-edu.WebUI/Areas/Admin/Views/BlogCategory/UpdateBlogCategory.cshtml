@model UpdateBlogCategoryDto
@{
    ViewData["Title"] = "Update Blog Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
	<div class="row justify-content-center">
		<div class="col-12">
			<form method="post">
				<input asp-for="BlogCategoryId" type="hidden"  />
				<div class="form-row mb-3">
					<div class="col-md-2 text-right">
						<label style="margin-top:5px">Name: </label>
					</div>
					<div class="col-md-10">
						<input class="form-control" asp-for="Name" type="text" value="@Model.Name" />
					</div>
				</div>
						
												
				
				<div class="form-row mb-3 justify-content-center py-5">
					<div class="col-md-6 d-flex">
						<a class="class= btn btn-secondary w-100" href="/admin/BlogCategory/index">Back List</a>
					</div>
					<div class="col-md-6 d-flex">
						<button class="btn btn-primary w-100">Save</button>
					</div>
				</div>

			</form>
		</div>
	</div>
</div>

