@model List<ResultContactDtos>
@{
    ViewData["Title"] = "Contact Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
	int count = 0;
}
<div class="py-3">
	<a asp-action="CreateContact" asp-area="Admin" asp-controller="Contact" class="btn btn-primary">Add New</a>
</div>
<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>MapUrl</th>
		<th>Address</th>
		<th>Phone</th>
		<th>Email</th>
		<th>Actions</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>@item.MapUrl</td>
			<td>@item.Address</td>
			<td>@item.Phone</td>
			<td>@item.Email</td>
			<td>

				<a asp-action="DeleteContact" asp-route-id="@item.ContactId" asp-controller="Contact" asp-area="Admin" class="btn btn-outline-danger">Delete</a>
				<a asp-action="UpdateContact" asp-route-id="@item.ContactId" asp-controller="Contact" asp-area="Admin" class="btn btn-outline-info">Update</a>

			</td>
		</tr>
	}
</table>



